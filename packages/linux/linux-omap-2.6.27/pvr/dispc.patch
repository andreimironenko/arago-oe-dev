+		reg = DISPC_VID2_BASE + DISPC_VID_BA0;
+		break;
+	default:
+		BUG();
+		return;
+	}
+
+	dispc_write_reg(reg, paddr);
+	val = dispc_read_reg(DISPC_CONTROL) | (1 << 5); /* GOLCD */
