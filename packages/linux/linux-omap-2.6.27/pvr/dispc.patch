+	u32 reg;
+	u32 val;
+
+	switch (plane) {
+	case 0:
+		reg = DISPC_GFX_BA0;
+		break;
+	case 1:
+		reg = DISPC_VID1_BASE + DISPC_VID_BA0;
+		break;
